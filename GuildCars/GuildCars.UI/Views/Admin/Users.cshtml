@model IEnumerable<GuildCars.UI.Models.UserRoleViewModel>

@{
    ViewBag.Title = "Users";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Users</h2>
        @Html.ActionLink("Add a new user", "AddUser", "Admin")
        <br />
        <br />
        <table class="table table-striped table-bordered table-condensed" id="UsersWithRoles">
            <thead class="thead-default">
                <tr>
                    <td><b>Last Name</b></td>
                    <td><b>First Name</b></td>
                    <td><b>Email</b></td>
                    <td><b>Roles</b></td>
                    <td></td>
                </tr>
            </thead>
            @foreach (var user in Model)
            {
                <tr>
                            <td>@user.LastName</td>
                            <td>@user.FirstName</td>
                            <td>@user.Email</td>
                            <td>@user.Roles</td>
                            <td>@Html.ActionLink("edit", "EditUser", "Admin", new { id = user.UserId }, null)</td>
                        </tr>
            }
        </table>
    </div>
</div>


