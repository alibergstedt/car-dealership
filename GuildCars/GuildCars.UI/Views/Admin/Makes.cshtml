@model GuildCars.UI.Models.AddMakeViewModel

@{
    ViewBag.Title = "Makes";
}

<div class="row">
    <hr />
    <h2>Makes</h2>
    <br />
</div>
<div class="row">
    <div class="col-xs-12">
        <p id="statusMessage">

        </p>
        @using (Html.BeginForm("Makes", "Admin", FormMethod.Post))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()            
            <div class="col-xs-12 form-inline table-bordered" style="padding:10px;margin:10px auto;">
                <div class="form-group">
                    <label>New Make</label>                    
                    @Html.TextBoxFor(m => m.CarMakeName, new { @class = "form-control" })    
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.CarMakeName)</span>                
                </div>
                <button style="width:10%;" class="btn btn-default">Save</button>
                <br />
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-xs-6">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Make</th>
                    <th scope="col">Date Added</th>
                    <th scope="col">User</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Makes)
                {
                    <tr>
                        <td>@user.CarMakeName</td>
                        <td>@user.DateCreated.ToShortDateString()</td>
                        <td>@ViewBag.UserName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>